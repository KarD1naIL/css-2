<header class="page_block">
	<div class="header">
		<a href="#test">
			{{> logo}}
		</a>
		<nav class="header_nav">
			<div class="header_nav_right">
				{{> nav list=header}}
			</div>
		</nav>
	</div>
</header>

<div class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<div class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}">
			<label>{{checkbox.label}}</label>
		</div>

		<button class="form_button">{{button}}</button>
		<div class="leo">
			<hr>
		</div>
		<p class="form_info">{{info}}</p>
	</div>
	{{/with}}
</div>

<div class="updates">
	{{#with updates}}
	<h4 class="updates_title">{{title}}</h4>

	{{#each list}}
	<div class="box">
		<img class="updates_img" src="https://picsum.photos/32/32" alt=" image">
		<a class="updates_nickname">@{{nickname}}</a>
		<p class="updates_description"> {{description}}</p>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}" class="messages_link">{{text}}</a>
	{{/with}}
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}

	<h2 class="expirience_title">{{title}}</h2>
	<p class="expirience_badge">{{badge}}</p>

	<div class="last">
		{{#each list}}
		<div class="listtt">
			<h5 class="list_name">{{name}}</h5>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>

	{{/with}}
</div>
<footer class="page_block" id="test">
	<div class="footer">
		<div>
			{{> logo}}
			<span class="footer_copyright">Copyright 2023-2024</span>
		</div>
		{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>
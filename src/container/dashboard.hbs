<body>

	<div class="page page--dashboard">
		<aside class="page__aside aside vertical vertical--big">
			<div class=" text aside__logo">
				Sidebar
			</div>
			<nav class="vertical vartical--small">
				<a href="#" class="nav-button nav-button--active click">
					<span class="icon nav-button__icon" style="background-image: url('/svg/nav/home.svg')"></span>
					<span class="text text--light">Home</span>
				</a>
				<a href="#" class="nav-button  click">
					<span class="icon nav-button__icon" style="background-image: url('/svg/nav/order.svg')"></span>
					<span class="text text--light">Order</span>
				</a>
				<a href="#" class="nav-button  click">
					<span class="icon nav-button__icon" style="background-image: url('/svg/nav/products.svg')"></span>
					<span class="text text--light">Products</span>
				</a>

				<div class="relative click">
					<div class="field field--select">
						<span class="text text--light">Chosee...</span>
					</div>
					<select class="field__select">
						<option value="dog">Dog</option>
						<option value="dog">Dog</option>
						<option value="dog">Dog</option>
						<option value="dog">Dog</option>
						<option value="dog">Dog</option>
					</select>
				</div>
			</nav>
		</aside>

		<header class="header">
			<div class="layout header__content text--small">
				<div class="header__search relative">
					<input type="text" placeholder="Search" class="text field field--header">
					<span class="icon header__icon-search"
						style="background-image: url('/svg/header/search.svg')"></span>
					<span class="icon icon--header-settings icon--button icon--color-blue click"
						style="background-image: url('/svg/header/settings.svg')"></span>
				</div>
				<div class="header--icon-hug">
					<span class="icon icon__header-hug hug1 click"
						style="background-image: url('/svg/header/hug1.svg')"></span>
					<span class="icon icon__header-hug hug2 click"
						style="background-image: url('/svg/header/hug2.svg')"></span>
					<span class="icon icon__header-hug hug3 click"
						style="background-image: url('/svg/header/hug3.svg')"></span>
				</div>
			</div>
		</header>

		<main class="main">
			<div class="layout">
				<section class="box analytic__block">
					<div class="analytic analytic--double analytic__blue">

						<span class="icon analytic__button icon--button icon--color-blue click"
							style="background-image: url('/svg/analytic/order.svg')"></span>

						<div class="relative vertical vertical--small">
							<div class="analytic__title text text--light">$961</div>
							<div class=" text text--small text--lighter">Total Order</div>
							<span class="icon analytic__arrow"
								style="background-image: url('/svg/analytic/blue-arrow.svg')"></span>

						</div>
					</div>
					<div class="analytic analytic--double analytic__purple">

						<span class="icon analytic__button icon--button icon--color-purple click"
							style="background-image: url('/svg/analytic/money.svg')"></span>

						<div class="relative vertical vertical--small">
							<div class="analytic__title text text--light">$500.00</div>
							<div class=" text text--small text--lighter">Total Order</div>
							<span class="icon analytic__arrow"
								style="background-image: url('/svg/analytic/blue-arrow.svg')"></span>

						</div>
					</div>

					<div class="analytic2 analytic__blue">

						<span class="icon analytic__button icon--button icon--color-blue click"
							style="background-image: url('/svg/analytic/money.svg')"></span>

						<div class="relative vertical vertical--small">
							<div class="analytic__title text text--light">$203k</div>
							<div class="text text--small text--lighter">Total Order</div>
						</div>
					</div>

					<div class="analytic3 analytic__white">
						<span class="icon analytic__button icon--button icon--color-yellow click"
							style="background-image: url('/svg/analytic/shop.svg')"></span>

						<div class="relative vertical vertical--small">
							<div class="analytic__title text text--dark">$203k</div>
							<div class="text text--small text--dark">Total Order</div>
						</div>
					</div>
				</section>
			</div>



			<div class="layout sector__block ">
				<div class="sector">
					<div class="purchase vertical vertical--big">
						<h5 class="text purchase__title">Purchase list</h5>
						<div class="purchase__div line">
							<div class="text purchase__text">
								<a>ID437661</a>
								<p>May 11, 2023, 14:21</p>
							</div>
							<div class="text purchase__text">
								<a>AirOn ProCam</a>
								<p>7/8 USB Type-C</p>
							</div>
							<div class="text purchase__text">
								<a>132.32 EUR</a>
								<p class="not__paid">Not paid</p>
							</div>
							<div class="text purchase__text">
								<a>Customer</a>
								<p>robin@com.de</p>
							</div>
						</div>
					</div>

					<div class="purchase__div">
						<div class="text purchase__text">
							<a>ID437661</a>
							<p>May 11, 2023, 14:21</p>
						</div>
						<div class="text purchase__text">
							<a>PHILIPS Essential</a>
							<p>HD9200/90</p>
						</div>
						<div class="text purchase__text">
							<a>543 USD</a>
							<p class="pay__stripe">Pay by Stripe</p>
						</div>
						<div class="text purchase__text">
							<a>Customer</a>
							<p>dima@com.ua</p>
						</div>
					</div>
				</div>
				<div class="sector">
					<h5 class="text payment__title">Payment</h5>
					<div>
						<div>
							<div class="form-check">
								<input name="pay" type="radio" class="form-check-input">
								<label class="form-check-label">Credit card</label>
							</div>
						</div>
						<div>
							<div class="form-check">
								<input name="pay" type="radio" class="form-check-input">
								<label class="form-check-label">Debit card</label>
							</div>
						</div>
						<div>
							<div class="form-check">
								<input name="pay" type="radio" class="form-check-input">
								<label class="form-check-label">PayPal</label>
							</div>
						</div>

					</div>
				</div>
			</div>

		</main>
	</div>

</body>

</html>